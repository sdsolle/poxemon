%!
%% Triangle of circles

% Define a simple procedure to draw a filled circle of diameter 1.
/circle
{
	newpath
%	0.5 0 360 arc
    moveto
    show
	closepath
%	stroke
} bind def

% Move the origin slightly.
10 10 translate
5 5 scale

/Courier findfont
[0.4 0 0 0.5 0 0]  makefont

% Make it the current font
setfont


/ALPHABASE22 (ABCDFGHJKLMNPQRSTVWXYZ) def

/code (***) def

/units 0 def
/tens 0 def
/huns 0 def


% Our infections loop from 0 to 99 in increments of 1.
0 1 99 
{ 
    /infections exch def

    %deaths loop from 0 to {number of infections} in steps of one. 
    0 1 infections 
    { 
        /deaths exch def

        code 2 ALPHABASE22 units get put
        code 1 ALPHABASE22 tens get  put
        code 0 ALPHABASE22 huns get  put

        code

        % Calculate the coordinates x = deaths, y = 99-infections …
        % … and put them on the stack

        deaths
        99 infections sub


        circle

        % roll the odometer on

        units 1 add dup
        22 ge
        {
            tens 1 add dup
            22 ge
            {
                huns 1 add
                /huns def
                pop
                0
            } if

            /tens exch def
            pop
            0
        } if
        /units exch def




    } for
} for 


showpage

